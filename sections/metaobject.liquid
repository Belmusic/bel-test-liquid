{{ 'metaobject.css' | asset_url | stylesheet_tag }}

<p class="page-width title">Meet our artists</p>

<section class="artist-container">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'artist' %}
            <div class="swiper-slide slide" {{ block.shopify_attributes }}>
              {{ block.settings.image | image_url: width: 65 | image_tag }}
              <p>{{ block.settings.artist_name }}</p>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var mySwiper = new Swiper('.mySwiper', {
      slidesPerView: 4.2,
      spaceBetween: 16,
    });
  });
</script>

{% schema %}
{
  "name": "Metaobject",
  "tag": "section",
  "blocks": [
    {
      "name": "Artist",
      "type": "artist",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "artist_name",
          "label": "Artist Name"
        }
      ]
    }
  ]
}
{% endschema %}
